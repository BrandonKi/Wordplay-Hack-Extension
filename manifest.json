{
    "manifest_version": 2,
    "name": "My Cool Extension",
    "version": "0.1",

    "permissions": [
        "storage"
    ],

    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["content.js"],
          "run_at": "document_end"
        }
      ],

      "background": {
        "scripts": ["background.js"]
      },

      "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Nothing special"
      }
  }

  